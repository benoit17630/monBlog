{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="text-center" style=" color:{{ article.category.color.color }}  ">{{ article.name }}</h1>
        <div class="row">

                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body row">



                                <p class="card-text col-6">{{ article.content }}</p>
                                <div class="col-6"> <img src="{{ article.image }}" alt="{{ article.name }}" class="img-fluid"></div>




                            </div>
                        </div>
                    </div>

        </div>
    </div>
{% endblock %}

{% block title %}
    {{ article.name }}
{% endblock %}

