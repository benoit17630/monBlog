{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Email</th>
            <th scope="col">Roles</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.email }}</td>
                <td>
                {% for role in user.roles %}
                    {% if role != "ROLE_USER" %}
                        {{ role }}
                    {% endif %}

                {% endfor %}
                </td>

                <td><a href="{{ path('admin_edit', {id : user.id}) }}" class="btn btn-secondary">Edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



{% endblock %}

