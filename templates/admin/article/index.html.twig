{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1 class="text-center">Liste des articles</h1>
    <a href="{{ path('admin_article_new') }}" class="btn btn-primary">Ajouter un article</a>
    <table class="table table-striped  table-bordered border-dark mt-4">
        <thead>
        <tr>

            <th scope="col">Nom</th>
            <th scope="col">Publier ?</th>
            <th scope="col">actions</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr >

                <td>{{ article.name }}</td>
                <td>{{ article.isPublished ? 'Oui' : 'Non' }}</td>
                <td>
                    <div class="row">
                        <div class="col-12 col-lg-6">  <a href="{{ path('admin_article_edit', {'id': article.id}) }}" class="btn btn-info">Modifier</a></div>
                        <div class="col-12 col-lg-6 mt-1"> {{ include('admin/article/_delete_form.html.twig') }}</div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    {# display navigation #}
    <div class="navigation">
        {% do articles.setPageRange(3) %}
        {{ knp_pagination_render(articles) }}
    </div>
{% endblock %}
